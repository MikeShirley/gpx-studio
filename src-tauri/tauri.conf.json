{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GPX Studio",
  "version": "0.1.0",
  "identifier": "com.gpxstudio.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GPX Studio",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "category": "Utility",
    "shortDescription": "GPX Editor for Rally Navigation",
    "longDescription": "A modern GPX editor for rally and adventure route planning. Create, edit, merge, and analyze GPX files.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "wix": null
    }
  },
  "plugins": {
    "fs": {
      "all": true,
      "scope": ["$DOCUMENT/**", "$DOWNLOAD/**", "$HOME/**"]
    },
    "dialog": {
      "all": true
    }
  }
}
